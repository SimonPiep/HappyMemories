<Window x:Class="HappyMemories.TextShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HappyMemories"
        mc:Ignorable="d"
        Title="TextShow" Height="300" Width="300" Background="#FF342E2E">
    <Grid>
        <TextBlock x:Name="label" TextWrapping="WrapWithOverflow" Text="Today might was a really sad day, as we might not won the Hackathon. Well I guess that is life." Margin="0,0,-0.4,108.4" FontSize="16" FontFamily="Segoe UI Symbol" Foreground="White"></TextBlock>
        <Button x:Name="button" Content="OKAY" HorizontalAlignment="Left" Margin="210,242,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Image x:Name="image1" HorizontalAlignment="Left" Height="41" Margin="15,221,0,0" VerticalAlignment="Top" Width="40" Source="happy.jpg"/>
        <Image x:Name="image1_Copy" HorizontalAlignment="Left" Height="41" Margin="60,221,0,0" VerticalAlignment="Top" Width="40" Source="happy.jpg"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="83" Margin="10,177,0,0" VerticalAlignment="Top" Width="78" Source="sad.png"/>

    </Grid>
</Window>
